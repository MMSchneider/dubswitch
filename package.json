{
  "name": "dubswitch",
  "version": "1.0.0",
  "description": "Overdub-friendly routing & Cardâ†”Local switching for Behringer X32",
  "main": "dist/main.js",
  "homepage": "./",
  "author": "Mike Schneider",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"wait-on http://localhost:3000 && npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "electron dist/main.js",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc -p tsconfig.main.json",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.8.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "typescript": "^5.3.2",
    "vite": "^5.0.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@types/node-osc": "^9.1.0",
    "node-osc": "^9.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "build": {
    "appId": "com.mmschneider.dubswitch",
    "productName": "DubSwitch",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "target": "dmg",
      "artifactName": "dubswitch-${os}-${arch}.${ext}"
    },
    "win": {
      "target": "zip",
      "artifactName": "dubswitch-${os}-${arch}.${ext}"
    },
    "linux": {
      "target": "zip",
      "artifactName": "dubswitch-${os}-${arch}.${ext}"
    }
  }
}
